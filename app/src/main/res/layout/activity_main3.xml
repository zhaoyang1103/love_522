<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="center">

        <Button
            android:id="@+id/bt_return_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我要反悔" />

        <TextView
            android:id="@+id/tx_heishow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黑方"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.example.love_activity.model.ImageGlideView_3
        android:id="@+id/show_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#61FFEB3B"></com.example.love_activity.model.ImageGlideView_3>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:gravity="center">

        <Button
            android:id="@+id/bt_return_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我要反悔" />

        <TextView
            android:id="@+id/tx_blackshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="白方"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>